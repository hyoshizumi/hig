{
  "name": "@hig/react-hig",
  "version": "1.0.3",
  "description": "hig components in react",
  "main": "lib/react-hig.js",
  "css": "lib/react-hig.css",
  "author": "Autodesk Inc.",
  "homepage": ".",
  "license": "Apache-2.0",
  "peerDependencies": {
    "prop-types": "^15.5.10",
    "react": "^15.4.1",
    "react-dom": "^15.4.1"
  },
  "devDependencies": {
    "@storybook/addon-info": "^3.1.0",
    "@storybook/addon-knobs": "^3.2.0",
    "@storybook/react": "^3.1.0",
    "@types/jest": "^19.2.3",
    "@types/node": "^7.0.21",
    "@types/react": "^15.0.24",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "concurrently": "^3.4.0",
    "enzyme": "^2.9.1",
    "fb-watchman": "^2.0.0",
    "hig-vanilla": "file:../vanilla",
    "ionicons": "^2.0.1",
    "jest-enzyme": "^3.7.0",
    "prop-types": "^15.5.10",
    "react": "^15.4.1",
    "react-addons-test-utils": "^15.6.0",
    "react-devtools-core": "^2.0.12",
    "react-dom": "^15.6.1",
    "react-scripts": "1.0.1",
    "react-test-renderer": "^15.6.1",
    "storybook-addon-jsx": "^4.1.0",
    "typescript": "^2.3.2",
    "webpack": "^3.5.5"
  },
  "scripts": {
    "build": "npm run build-vanilla && NODE_ENV=production webpack -p",
    "build-playground": "react-scripts build",
    "build-storybook": "build-storybook -s public -o build/storybook",
    "build-vanilla": "cd ../vanilla && npm run build && cd ../react && mkdir -p lib && cp ../vanilla/dist/hig.css lib/react-hig.css",
    "playground": "react-scripts start",
    "storybook": "start-storybook -p 9009 -s public",
    "start": "concurrently 'npm run start-vanilla' 'webpack --watch' --kill-others",
    "start-vanilla": "cd ../vanilla && npm run watch",
    "test": "react-scripts test --env=jsdom",
    "test-ci": "react-scripts test --env=jsdom --coverage --runInBand",
    "type-check": "tsc",
    "deploy-storybook": "npm run build-storybook && surge build/storybook",
    "deploy-playground": "npm run lib && react-scripts build && surge build",
    "postinstall": "cd ../vanilla && npm install"
  },
  "dependencies": {
    "jest": "^20.0.4",
    "react-test-renderer": "^15.6.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "!src/index.js",
      "src/**/*.{js,jsx}",
      "!src/**/*.story.{js,jsx}",
      "!src/fixtures/**/*",
      "!src/stories/**/*",
      "!src/playground/**/*",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    }
  }
}
